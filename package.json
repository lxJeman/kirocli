{
	"name": "kirocli",
	"version": "1.0.0",
	"license": "MIT",
	"bin": "dist/index.js",
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"start": "node dist/index.js",
		"dev:run": "npm run build && npm start",
		"test": "prettier --check . && xo && (ava || echo 'No tests found - this is OK for now')",
		"lint": "prettier --check . && xo",
		"lint:fix": "prettier --write . && xo --fix",
		"build:all": "npm run build && npm run package:all",
		"package:all": "npm run package:linux && npm run package:macos && npm run package:windows",
		"package:linux": "pkg dist/cli-cjs.js --targets node18-linux-x64 --output binaries/kirocli-linux",
		"package:macos": "pkg dist/cli-cjs.js --targets node18-macos-x64 --output binaries/kirocli-macos",
		"package:windows": "pkg dist/cli-cjs.js --targets node18-win-x64 --output binaries/kirocli-windows.exe",
		"package:nexe:all": "npm run package:nexe:linux && npm run package:nexe:macos && npm run package:nexe:windows",
		"package:nexe:linux": "nexe dist/cli.js --target linux-x64-18.20.4 --output binaries/kirocli-nexe-linux",
		"package:nexe:macos": "nexe dist/cli.js --target mac-x64-18.20.4 --output binaries/kirocli-nexe-macos",
		"package:nexe:windows": "nexe dist/cli.js --target windows-x64-18.20.4 --output binaries/kirocli-nexe-windows.exe",
		"clean:binaries": "rm -rf binaries",
		"prepare:release": "npm run clean:binaries && npm run build:all",
		"dist": "node scripts/create-distribution.js",
		"dist:linux": "node scripts/create-distribution.js linux",
		"dist:macos": "node scripts/create-distribution.js macos",
		"dist:windows": "node scripts/create-distribution.js windows",
		"clean:dist": "rm -rf distribution"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@anthropic-ai/sdk": "^0.56.0",
		"@google/generative-ai": "^0.24.1",
		"chokidar": "^4.0.3",
		"cli-highlight": "^2.1.11",
		"commander": "^14.0.0",
		"execa": "^9.6.0",
		"figures": "^6.1.0",
		"ink": "^4.1.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-spinner": "^5.0.0",
		"inquirer": "^12.7.0",
		"js-yaml": "^4.1.0",
		"meow": "^11.0.0",
		"openai": "^5.9.0",
		"ora": "^8.2.0",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/chokidar": "^1.7.5",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.0.14",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"nexe": "^5.0.0-beta.4",
		"pkg": "^5.8.1",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"vitest": "^3.2.4",
		"xo": "^0.53.1"
	},
	"ava": {
		"files": [
			"test/**/*.test.ts",
			"test/**/*.test.tsx",
			"**/*.test.ts",
			"**/*.test.tsx"
		],
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off",
			"unicorn/expiring-todo-comments": "off",
			"unicorn/filename-case": "off",
			"unicorn/prefer-node-protocol": "off",
			"unicorn/no-hex-escape": "off",
			"unicorn/escape-case": "off",
			"unicorn/switch-case-braces": "off",
			"unicorn/prevent-abbreviations": "off",
			"unicorn/prefer-nullish-coalescing": "off",
			"unicorn/no-process-exit": "off",
			"unicorn/prefer-top-level-await": "off",
			"unicorn/no-array-for-each": "off",
			"unicorn/prefer-string-slice": "off",
			"unicorn/numeric-separators-style": "off",
			"unicorn/no-for-loop": "off",
			"unicorn/prefer-for-of": "off",
			"unicorn/better-regex": "off",
			"unicorn/prefer-regexp-exec": "off",
			"unicorn/no-static-only-class": "off",
			"unicorn/prefer-switch": "off",
			"unicorn/prefer-optional-catch-binding": "off",
			"unicorn/no-useless-switch-case": "off",
			"@typescript-eslint/consistent-type-imports": "off",
			"@typescript-eslint/consistent-type-definitions": "off",
			"@typescript-eslint/prefer-readonly": "off",
			"@typescript-eslint/naming-convention": "off",
			"@typescript-eslint/no-extraneous-class": "off",
			"@typescript-eslint/class-literal-property-style": "off",
			"@typescript-eslint/member-ordering": "off",
			"@typescript-eslint/prefer-nullish-coalescing": "off",
			"@typescript-eslint/no-implicit-any-catch": "off",
			"@typescript-eslint/padding-line-between-statements": "off",
			"@typescript-eslint/return-await": "off",
			"@typescript-eslint/no-floating-promises": "off",
			"@typescript-eslint/restrict-template-expressions": "off",
			"@typescript-eslint/restrict-plus-operands": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/parameter-properties": "off",
			"@typescript-eslint/no-inferrable-types": "off",
			"@typescript-eslint/no-confusing-void-expression": "off",
			"react/prefer-read-only-props": "off",
			"react/jsx-sort-props": "off",
			"react/no-array-index-key": "off",
			"react/no-unescaped-entities": "off",
			"react/boolean-prop-naming": "off",
			"react/hook-use-state": "off",
			"react-hooks/exhaustive-deps": "warn",
			"n/prefer-global/process": "off",
			"import/order": "off",
			"import/first": "off",
			"default-case": "off",
			"padding-line-between-statements": "off",
			"object-shorthand": "off",
			"no-unused-vars": "off",
			"no-await-in-loop": "off",
			"no-return-await": "off",
			"capitalized-comments": "off",
			"complexity": "off",
			"max-depth": "off",
			"max-params": "off",
			"@typescript-eslint/ban-types": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"@typescript-eslint/no-unsafe-return": "off",
			"@typescript-eslint/no-unnecessary-type-assertion": "off",
			"@typescript-eslint/consistent-generic-constructors": "off",
			"@typescript-eslint/no-unnecessary-boolean-literal-compare": "off",
			"@typescript-eslint/consistent-type-assertions": "off",
			"@typescript-eslint/prefer-optional-chain": "off",
			"@typescript-eslint/switch-exhaustiveness-check": "off",
			"@typescript-eslint/prefer-reduce-type-parameter": "off",
			"unicorn/catch-error-name": "off",
			"unicorn/no-array-callback-reference": "off",
			"unicorn/prefer-spread": "off",
			"unicorn/no-array-reduce": "off",
			"unicorn/no-lonely-if": "off",
			"unicorn/prefer-set-has": "off",
			"unicorn/prefer-number-properties": "off",
			"unicorn/import-style": "off",
			"react/self-closing-comp": "off",
			"n/prefer-global/buffer": "off",
			"no-case-declarations": "off",
			"no-implicit-coercion": "off",
			"no-negated-condition": "off",
			"no-lonely-if": "off",
			"@typescript-eslint/prefer-regexp-exec": "off",
			"@typescript-eslint/prefer-for-of": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"pkg": {
		"scripts": [
			"dist/**/*.js"
		],
		"assets": [
			"node_modules/@anthropic-ai/sdk/**/*",
			"node_modules/@google/generative-ai/**/*",
			"node_modules/openai/**/*",
			"node_modules/ink/**/*",
			"node_modules/react/**/*",
			"node_modules/js-yaml/**/*",
			"node_modules/execa/**/*",
			"node_modules/chokidar/**/*",
			"node_modules/cli-highlight/**/*"
		],
		"targets": [
			"node18-linux-x64",
			"node18-macos-x64",
			"node18-win-x64"
		],
		"outputPath": "binaries"
	}
}
